package com.elenilson.cursojavaintermediario.aula72;

public class TiqueTaque {
	
	boolean tique;
	
	 synchronized void tique(boolean estaExecutando) {
		
		 if(!estaExecutando) {
			 tique = true;
			 notify();
			 return;
		 }
		 
		 System.out.println("Tique ");
		 
		 tique = true;
		 
		 notify();
		 
		 try {
			 while(tique) {
				 wait();
				 
			 }
		 }catch (Exception e) {
			e.printStackTrace();
		}
	}

}
